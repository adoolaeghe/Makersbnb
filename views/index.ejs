<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <script src="../lib/jquery-3.2.1.js"></script>
    <script src="advert.js"></script>
    <script src="list.js"></script>
    <script src="interface.js"></script>
    <title>Makersbnb</title>
  </head>
  <body>

    <h1>Find homes on Makers BnB</h1>
    <h2>Discover entire homes and private rooms perfect for any trip.</h2>

  <h2><%= welcomeMessage %></h2>
    <form action="/new-advert" method="GET">
      <button class="newAdBtn" type="submit">Post a new advert</button>
    </form>

    <ul class="advertList">
      <% adverts.forEach(function(advert) { %>
        <form action="/book" method="POST">
        <li class="listing">
          <%= advert.name %> - <%= advert.description %> - Â£<%= advert.price %> per night <br>
          Available from: <%= new Date(advert.startDate).toDateString() %> - <%= new Date(advert.endDate).toDateString() %> <br>
          <% if(advert.booked) { %>
          Booked
        <% } else { %>
          Vacant
        <% } %>
            <button type="submit" name="bookBtn" value="<%= advert._id %>">Book</button>
          </form>
        </li>
        <br>

        <% }) %>
    </ul>

    <form action="/users/new" method="get">
      <button type="submit" value="signUp" class="signUp">Sign Up</button>
    </form>

    <form action="/sessions/new" method="get">
      <button type="submit" value="logIn" class="logIn">Log In</button>
    </form>

    <form action="/sessions?_method=DELETE" method="post">
      <button type="submit" value="logOut" class="logOut">Log Out</button>
    </form>

  </body>
  </head>
